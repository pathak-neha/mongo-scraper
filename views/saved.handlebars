<div class="jumbotron text-center">
  <div class="overlay">
  </div>
  <div class="background-image">
  </div>
  <div class="caption">
    <h1>Saved Articles</h1>
    <p>Your Saved Articles</p>
  </div>
</div>
<div class="container-fluid article-container">
  {{#if articles}} {{#each articles}}
  <div data-_id={{this._id}} data-link={{this.link}} class="card">
    <div class="card-header">
      <h3>
        <a class="article-link" target="_blank" rel="noopener noreferrer" href="{{this.link}}">{{this.title}}</a>
        <a class="btn btn-danger deleteArticle" data-id="{{this._id}}">Delete From Saved</a>
        <a class="addNote btn btn-info " data-id="{{this._id}}">Article Notes</a>
      </h3>
    </div>
    <div class="card-body">{{this.title}}</div>
  </div>
</div>
{{/each}}{{else}}
<div class='alert alert-warning text-center'>
  <h4>Uh Oh. Looks like we don't have any saved articles.</h4>
</div>
<div class='card'>
  <div class='card-header text-center'>
    <h3>What Would You Like To Do?</h3>
  </div>
  <div class='card-body text-center'>
    <h4><a class='scrape-new' href='/'>Home?</a></h4>
    {{!--
    <h4><a href='/saved'>Go to Saved Articles</a></h4>
  </div> --}}
</div>
{{/if}} {{!-- modal for displaying and creating notes --}}
<div id="noteModal" class="modal" role="dialog">
  <div class="modal-dialog modal-md">
    <div class="modal-content">
      <div class="modal-header">
        {{!-- <button type="button" class="close" data-dismiss="modal">&times;</button> --}}
        <div>
          <div class="container-fluid text-center">
            <h4 class="">Add a note</h4>
            <button type="button" class="closeModel" data-dismiss="modal" style="margin-top: -30px;">Ã—</button>

            <div class="modal-body">
              <input type="text" id="noteBodyEntry" class="noteInput" placeholder="Enter Note" value="">
              <div id="noteArea"></div>
            </div>
            <div class="modal-footer">
              <h5 class="instructions">Enter Note and Click Save button, or click (X) to delete</h5>
              <button type="button" id="submitNote">Save Note</button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<footer class="footer">
